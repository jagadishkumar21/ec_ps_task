<%= render "layouts/user_session" %>

<div class="available_courses">
  <nav class="navbar navbar-expand-lg  nav-text"><h5>Enrolled Students</h5></nav>
  <table class="table table-striped">
    <tr>
      <th> Student Id </th>
      <th> Student Name </th>
      <th> Mobile Number </th>
      <th> Email </th>
      <th> Marks </th>
      <th> Update Marks</th>
    </tr>
    <% @all_enrolled_students.each do |student| %>
      <tr>
        <td><%= student.id%></td>
        <td><%= student.first_name+" " + student.last_name%></td>
        <td ><%= student.phone_number%></td>
        <td><%= student.email %></td>
        <td><%= @course.enrolled_courses.find_by(student_id: student.id).marks %></td>
        <td><%= link_to "Edit",edit_marks_path(find_enrolled_course_id(student.id, @course.id))  %></td>
    <% end %>

  </table>
</div>